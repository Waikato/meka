  <mailingLists>
    <mailingList>
      <name>meka-list</name>
      <subscribe>https://lists.sourceforge.net/lists/listinfo/meka-list</subscribe>
      <unsubscribe>https://lists.sourceforge.net/lists/listinfo/meka-list</unsubscribe>
